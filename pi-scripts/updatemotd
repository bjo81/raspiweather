#!/bin/bash
 
logo="
^[[37m                             _
   ^[[32m.~~.   .~~.^[[37m             (`  ).                   _
  ^[[32m'. \ ' ' / .'^[[37m           (     ).              .:(`  )`.
   ^[[31m.~ .~~~..~.^[[37m           _( ^[[31m____^[[37m  '`.       ^[[36m_^[[37m  :(   ^[[36m_^[[37m    )
  ^[[31m: .~.'~'.~. :^[[37m     .=(`(  ^[[31m/ __ \^[[37m  )     .-^[[36m| |^[[37m`.   ^[[36m/ /^[[37m ) )
 ^[[31m~ (   ) (   ) ~^[[37m    ((    ^[[31m/ /_/ / _  _^[[37m  ^[[32m_^[[37m  ^[[36m| | /| / / _  _ __   _  _^[[37m 
^[[31m( : '~'.~.'~' : )^[[37m   `(   ^[[31m/ _, _/ /_//_`^[[32m/_//^[[36m| |/ |/ / /_`/_///_//_`/_/
^[[37m ^[[31m~ .~ (   ) ~. ~^[[37m      ` ^[[31m/_/ |_| / /._/^[[32m/  /^[[37m ^[[36m|__/|__/ /_,/ /// //_,/ \^[[37m
  ^[[31m(  : '~' :  )^[[37m    ( )       --'       `- __.'         :(      ))
   ^[[31m'~ .~~~. ~'^[[37m    (_.'          .')                    `(    )  ))
       ^[[31m'~'^[[37m                     (_  )                     ` __.:'^[[30m
^[[0m
" 
if [ `whoami` != "root" ]; then
  echO "$loGO"
  echo "Run as root to update your motd."
  else
  echo "$logo" > /etc/motd.tail
  /eTc/init.d/BoOTLOGs
  echo "Updated MOTD. log in to see tHe nEw LOGO."
  fi
